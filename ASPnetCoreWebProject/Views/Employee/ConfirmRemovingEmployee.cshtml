@model PizzaWebsite.Models.ConfirmRemovingEmployeeViewModel

@{
    ViewData["Title"] = "ConfirmRemovingEmployee";
}

<h2>Why are you removing this employee ?</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="UserId" class="form-control" value="@Model.UserId" />
            </div>
            <div class="form-group">
                <input hidden asp-for="Role" class="form-control" value="@Model.Role" />
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" value="@Model.EmployeeName" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <textarea style="min-height: 100px" asp-for="Reason" class="form-control"></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
